{
    "line_plot": {
      "description": "折れ線グラフを作成するためのパラメータ",
      "required": [
        {"name": "x", "type": "list", "description": "X軸のデータ"},
        {"name": "y", "type": "list", "description": "Y軸のデータ"}
      ],
      "optional": [
        {"name": "color", "type": "string", "description": "線の色 (例: blue, red)"},
        {"name": "label", "type": "string", "description": "グラフのラベル"},
        {"name": "linestyle", "type": "string", "description": "線のスタイル (例: -, --, .-)"},
        {"name": "linewidth", "type": "integer", "description": "線の太さ"},
        {"name": "marker", "type": "string", "description": "データ点に使用するマーカー (例: o, x, *)"},
        {"name": "xlabel", "type": "string", "description": "X軸のラベル"},
        {"name": "ylabel", "type": "string", "description": "Y軸のラベル"},
        {"name": "title", "type": "string", "description": "グラフのタイトル"}
      ]
    },
    "bar_plot": {
      "description": "棒グラフを作成するためのパラメータ",
      "required": [
        {"name": "x", "type": "list", "description": "X軸のカテゴリデータ"},
        {"name": "height", "type": "list", "description": "各カテゴリの高さ（棒の高さ）"}
      ],
      "optional": [
        {"name": "width", "type": "float", "description": "棒の幅 (デフォルトは0.8)"},
        {"name": "color", "type": "string", "description": "棒の色"},
        {"name": "label", "type": "string", "description": "グラフのラベル"},
        {"name": "align", "type": "string", "description": "棒の位置揃え (例: center, edge)"},
        {"name": "xlabel", "type": "string", "description": "X軸のラベル"},
        {"name": "ylabel", "type": "string", "description": "Y軸のラベル"},
        {"name": "title", "type": "string", "description": "グラフのタイトル"}
      ]
    },
    "histogram": {
      "description": "ヒストグラムを作成するためのパラメータ",
      "required": [
        {"name": "x", "type": "list", "description": "データのリスト"}
      ],
      "optional": [
        {"name": "bins", "type": "integer", "description": "ビン数 (デフォルトは10)"},
        {"name": "color", "type": "string", "description": "ヒストグラムの色"},
        {"name": "edgecolor", "type": "string", "description": "ビンの境界線の色"},
        {"name": "alpha", "type": "float", "description": "透明度"},
        {"name": "xlabel", "type": "string", "description": "X軸のラベル"},
        {"name": "ylabel", "type": "string", "description": "Y軸のラベル"},
        {"name": "title", "type": "string", "description": "グラフのタイトル"}
      ]
    },
    "pie_chart": {
      "description": "パイチャートを作成するためのパラメータ",
      "required": [
        {"name": "x", "type": "list", "description": "各カテゴリの値"},
        {"name": "labels", "type": "list", "description": "カテゴリのラベル"}
      ],
      "optional": [
        {"name": "colors", "type": "list", "description": "各カテゴリの色のリスト"},
        {"name": "autopct", "type": "string", "description": "割合の表示形式 (例: %1.1f%%)"},
        {"name": "startangle", "type": "integer", "description": "最初のセクションの角度"},
        {"name": "explode", "type": "list", "description": "特定のセクションを強調するためのリスト (例: [0, 0.1, 0])"},
        {"name": "title", "type": "string", "description": "グラフのタイトル"}
      ]
    },
    "box_plot": {
      "description": "箱ひげ図を作成するためのパラメータ",
      "required": [
        {"name": "x", "type": "list", "description": "複数のグループのデータのリスト"}
      ],
      "optional": [
        {"name": "vert", "type": "boolean", "description": "縦向きか横向きか (デフォルトはTrue)"},
        {"name": "notch", "type": "boolean", "description": "ノッチ付きの箱ひげ図にするか (デフォルトはFalse)"},
        {"name": "patch_artist", "type": "boolean", "description": "箱の色を塗るか (デフォルトはTrue)"},
        {"name": "boxprops", "type": "dict", "description": "箱のスタイルをカスタマイズするためのパラメータ"},
        {"name": "whiskerprops", "type": "dict", "description": "ひげのスタイルをカスタマイズするためのパラメータ"},
        {"name": "xlabel", "type": "string", "description": "X軸のラベル"},
        {"name": "ylabel", "type": "string", "description": "Y軸のラベル"},
        {"name": "title", "type": "string", "description": "グラフのタイトル"}
      ]
    },
    "scatter_plot": {
      "description": "散布図を作成するためのパラメータ",
      "required": [
        {"name": "x", "type": "list", "description": "X軸のデータ"},
        {"name": "y", "type": "list", "description": "Y軸のデータ"}
      ],
      "optional": [
        {"name": "color", "type": "string", "description": "点の色"},
        {"name": "size", "type": "list", "description": "点のサイズのリスト"},
        {"name": "marker", "type": "string", "description": "点の形 (例: o, x, *)"},
        {"name": "xlabel", "type": "string", "description": "X軸のラベル"},
        {"name": "ylabel", "type": "string", "description": "Y軸のラベル"},
        {"name": "title", "type": "string", "description": "グラフのタイトル"}
      ]
    },
    "generic_chart": {
      "description": "汎用チャートを作成するためのパラメータ",
      "required": [
        {"name": "type", "type": "string", "description": "グラフの種類 (例: line, bar, pie, 等)"},
        {"name": "data", "type": "list", "description": "データリスト"}
      ],
      "optional": [
        {"name": "config", "type": "dict", "description": "グラフの設定を含む辞書 (ラベルや色など)"}
      ]
    }
  }
  